    "@p5-wrapper/react": "^4.4.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-spring/web": "^10.0.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "better-auth": "^1.3.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "deep-utility-types": "^1.3.1",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "easy-peasy": "^6.1.0",
    "emoji-regex": "^10.6.0",
    "lenis": "^1.3.11",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.545.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "motion": "^12.23.24",
    "nanoid": "^5.1.6",
    "next": "^15.5.4",
    "next-themes": "^0.4.6",
    "next-view-transitions": "^0.3.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-moment": "^1.1.3",
    "sonner": "^2.0.7",
    "string-length": "^6.0.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.27",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^20.19.21",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "drizzle-kit": "^0.31.5",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
